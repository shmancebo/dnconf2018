@{
    ViewData["Title"] = "Home Page";
}

@model SearchViewModel

<div id="image" class="col-lg-2">
    <img src="~/images/pedroooo.gif" width="300" height="300" />
    <span style="width:1200px;font-size:40px;color:black;display:block;margin-left:30px;margin-bottom:20px;">Indexando piedras con Custom API Vision y Azure Search</span>
</div>
<div id="container" class="col-lg-12">
    <form asp-controller="Home" asp-action="Index" method="post">
        <div id="searchcontainer">
            <label>Busqueda</label>
            <input asp-for="Query" id="inputSearch" type="text" />
            <input  id="searchButton" type="submit" />
        </div>
    </form>

    <div id="result">
        @if (Model != null && Model.SearchResult != null)
        {
            foreach (var item in Model.SearchResult)
            {
                <div id="item">
                    <img class="img-responsive" src="@item.Url" />
                    <label>Scoring:</label><label>@item.Scoring</label>
                    <br />
                    <label>Tag:</label><label>@item.Tag</label>
                </div>
            }
        }
    </div>
</div>
